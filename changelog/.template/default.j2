{
  "type": "message",
  "attachments": [
    {
      "contentType": "application/vnd.microsoft.card.adaptive",
      "content": {
        "$schema": "http://adaptivecards.io/schemas/adaptive-card.json",
        "version": "1.4",
        "type": "AdaptiveCard",
        "body": [
          {
            "type": "TextBlock",
            "text": "{{ title }}",
            "weight": "Bolder",
            "size": "Medium"
          },
          {
            "type": "TextBlock",
            "text": "{{ description }}",
            "wrap": true
          },
          {
            "type": "FactSet",
            "facts": [
              {
                "title": "Environnements:",
                "value": "{{ envs | join(', ') }}"
              },
              {
                "title": "Impact:",
                "value": "{{ impact | join(', ') }}"
              },
              {
                "title": "Début:",
                "value": "{{ schedule.start }}"
              },
              {
                "title": "Fin:",
                "value": "{{ schedule.end }}"
              },
              {
                "title": "Recommandations:",
                "value": "{{ recommendations }}"
              }
            ]
          },
          {
            "type": "TextBlock",
            "text": "Contacts:",
            "weight": "Bolder",
            "spacing": "Medium"
          },
          {
            "type": "TextBlock",
            "text": "{% for contact in contacts %}{{ contact }}{% if not loop.last %}, {% endif %}{% endfor %}",
            "wrap": true
          }
        ],
        "actions": [
          {
            "type": "Action.OpenUrl",
            "title": "Voir plus de détails",
            "url": "https://example.com/details"
          }
        ]
      }
    }
  ]
}
